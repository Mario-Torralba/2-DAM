<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:id="@+id/nombreVendedor"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Dejar una valoraciÃ³n para Mario Torralba Pardos"
            android:textColor="@color/vinted"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/gris"
            android:layout_height="10dp">

        </LinearLayout>

        <LinearLayout
            android:layout_margin="80dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/estrella1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/estrella_vacia"
                app:tint="@color/vinted"
                />
            <ImageView
                android:id="@+id/estrella2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:tint="@color/vinted"
                android:src="@drawable/estrella_vacia"/>
            <ImageView
                android:id="@+id/estrella3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:tint="@color/vinted"
                android:src="@drawable/estrella_vacia"/>
            <ImageView
                android:id="@+id/estrella4"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:tint="@color/vinted"
                android:src="@drawable/estrella_vacia"/>
            <ImageView
                android:id="@+id/estrella5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                app:tint="@color/vinted"
                android:src="@drawable/estrella_vacia"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="3dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_width="345dp"
            android:layout_height="245dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:textColorHint="@color/gris"
                    android:id="@+id/comentario"
                    android:gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Escribe tu comentario" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/enviarValoracion"
            android:layout_gravity="center"
            android:background="@color/vinted"
            android:layout_marginTop="90dp"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ENVIAR" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>