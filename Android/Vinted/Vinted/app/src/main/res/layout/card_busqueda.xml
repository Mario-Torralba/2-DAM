<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:id="@+id/cardViewBusqueda"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="188dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardElevation="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenBusqueda"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/baseline_check_24"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:weightSum="10">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tituloBusqueda"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="0dp"
                android:text="Nombre articulo"
                android:textSize="16dp"/>
            <TextView
                android:textColor="@color/vinted"
                android:layout_marginLeft="10dp"
                android:id="@+id/precioBusqueda"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:text="Precio artÃ­culo"
                android:textSize="16dp"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>