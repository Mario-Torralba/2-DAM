<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    android:id="@+id/cardViewBusqueda"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenBusqueda"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/baseline_check_24" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:gravity="center"
                android:id="@+id/tituloBusqueda"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Nombre articulo"
                android:textSize="18dp"/>
            <TextView
                android:textColor="@color/vinted"
                android:gravity="center"
                android:id="@+id/precioBusqueda"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Precio artÃ­culo"
                android:textSize="18dp"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>